package core{		import flash.display.Sprite;	import flash.display.StageAlign;	import flash.display.StageScaleMode;	import leap.LeapInit;	import objects.Player;	import objects.ScoreField;	import objects.TimerField;		[SWF(width = 1000, height = 750, frameRate = "60", backgroundColor = "#000000")]	public class Entry extends Sprite {				private var mLeap:LeapInit;				public function Entry() {						stage.align = StageAlign.TOP_LEFT;			stage.scaleMode = StageScaleMode.NO_SCALE;						// スプラッシュの表示						// ゲーム画面の組み立て			createGameScreen();						// Mediatorにステージを登録			Mediator.registerStage(stage);						// Starling 開始			new Starling_test02(stage);						// Leap motion セットアップ			mLeap = new LeapInit(stage);					}				private function createGameScreen():void{			var player:Player = new Player();			addChild(player);			Mediator.addPlayer(player);						var score:ScoreField = new ScoreField();			addChild(score);			score.x = stage.stageWidth - score.width;			score.y = 50;			Mediator.addScoreField(score);						var timer:TimerField = new TimerField();			addChild(timer);			timer.x = stage.stageWidth / 2 - timer.width / 2;			timer.y = 50;			timer.start();		}	}}