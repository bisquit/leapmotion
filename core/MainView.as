package core{	import starling.display.Quad;	import flash.utils.setTimeout;	import starling.events.EnterFrameEvent;	import objects.Star02;	import starling.display.Sprite;	import starling.events.Event;	import starling.extensions.PDParticleSystem;	import starling.textures.Texture;	import starling.core.Starling;	public class MainView extends Sprite {		private var W:Number = 1000;		private var H:Number = 750;		private var sec_star:Number = 2000;		private var star_R:Number = 10;				public var terminate:Boolean = false;				public function MainView() {			if(!stage){				addEventListener(Event.ADDED_TO_STAGE, init);			} else {				init();			}		}		private function init():void {			removeEventListener(Event.ADDED_TO_STAGE, init);						// 背景の生成			var bg:Quad = new Quad(W,H,0x000000);			addChild(bg);						createStartStar();			// sec_starおきに星を生成する関数を呼ぶ			//setTimeout(createStar, sec_star);						addEventListener(Event.ENTER_FRAME, Mediator.update);		}				public function createStartStar():void{			var star:Star02 = new Star02(W,H,star_R, true);			Mediator.starArr.push(star);			addChild(star);			star.x = stage.stageWidth /2;			star.y = stage.stageHeight / 2 + 60;		}		public function createStar():void {			// 星を生成して配列に格納、addChild			var star:Star02 = new Star02(W,H,star_R);			Mediator.starArr.push(star);			addChild(star);			if( !terminate ){				setTimeout(createStar, sec_star);			}		}	}}