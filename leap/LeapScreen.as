package  leap{		public class LeapScreen {				 /* ステージに対応するリープ仮想スクリーン */		public static const width:int = 300;		public static const height:int = 300;		public static const depth:int = 400;		public static const marginBottom:Number = 150;		public static const padding:Number = 50;		public static const top:Number = height + padding * 2 + marginBottom; // センサリング領域の上端		public static const halfWidth:Number = width / 2;		public static const halfDepth:Number = depth / 2;				public static function xScale(stageWidth): Number{			return stageWidth / LeapScreen.width;		}		public static function yScale(stageHeight): Number{			return stageHeight / LeapScreen.height;		}			}}