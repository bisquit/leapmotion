package  leap{		public class LeapScreen {				 /* ステージに対応するリープ仮想スクリーン */		public static const width:int = 200;		public static const height:int = 200;		public static const bottom:Number = 150;		public static const top:Number = height + bottom;		public static const halfWidth:Number = width / 2;				/* 仮想スクリーン外側の余白　スクリーン + margin = センサリング領域 */		public static const margin:Number = 50;				public function LeapScreen() {					}				public static function xScale(stageWidth): Number{			return stageWidth / LeapScreen.width;		}		public static function yScale(stageHeight): Number{			return stageHeight / LeapScreen.height;		}			}}