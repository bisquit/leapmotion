package  phase {	import flash.display.Sprite;	import flash.display.Bitmap;	import core.Mediator;	import flash.utils.setTimeout;	import core.PhaseManager;	import flash.events.Event;		public class SplashPhase extends Sprite implements IPhase{				[Embed(source="../assets/images/star.png")]		private var StarImage:Class;				public function SplashPhase() {						var img:Bitmap = new StarImage();			addChild(img);					}				public function start():void {			trace("splash start");			Mediator._stage.addChild(this);			Mediator._player.visible = false;			Mediator._stage.addChild(Mediator._player);						Mediator._stage.addEventListener(Event.ENTER_FRAME, Mediator.update);			//addEventListener(Event.ENTER_FRAME, detectHand);			setTimeout(nextPhase, 2000);		}				/*private function detectHand(e:Event):void {			if(Mediator._player.visible){				removeEventListener(Event.ENTER_FRAME, detectHand);				PhaseManager.nextPhase();			}		}*/				private function nextPhase():void {						PhaseManager.nextPhase();		}				public function destroy():void {			trace("splash destroy");			Mediator._stage.removeChild(this);		}	}	}