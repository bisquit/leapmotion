package  phase {	import flash.display.Sprite;	import flash.display.Bitmap;	import core.Mediator;	import flash.utils.setTimeout;	import core.PhaseManager;		public class SplashPhase extends Sprite implements IPhase{				[Embed(source="../assets/images/star.png")]		private var StarImage:Class;				public function SplashPhase() {						var img:Bitmap = new StarImage();			addChild(img);					}				public function start():void {			trace("splash start");			Mediator._stage.addChild(this);						setTimeout(nextPhase, 2000);		}				private function nextPhase():void {						PhaseManager.nextPhase();		}				public function destroy():void {			trace("splash destroy");			Mediator._stage.removeChild(this);		}	}	}