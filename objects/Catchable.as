package objects{	import flash.display.Bitmap;	import flash.display.Sprite;/* * ロゴやスタートボタンなど、ゲーム中の星とは異なるが同様に * 掴む対象となるオブジェクトを生成する * 引数はマッピングされた名前と、スケール */	public class Catchable extends Sprite {		[Embed(source="../assets/images/logo.png")]		private var LogoImage:Class;				[Embed(source="../assets/images/start-btn.png")]		private var StartButtonImage:Class;				private var img:Bitmap;				private var mapping:Object = {			"logo": LogoImage,			"startButton": StartButtonImage		}				public var vx:Number = 0;		public var vy:Number = 0;		public var acceleration:Number = 0;		public var point:Number = 0;		public var delete_flag:Boolean = false;		public var isCollided:Boolean = false;		public function Catchable(name:String, scale:Number = 0.5) {						img = new mapping[name]();			img.scaleX = img.scaleY = scale;			img.x = - img.width/2;			img.y = - img.height/2;			addChild(img);		}				public function destroy():void {			removeChildren();			img = null;		}	}}