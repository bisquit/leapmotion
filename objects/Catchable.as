package objects{	import flash.display.Bitmap;	import flash.display.Sprite;	import flash.display.MovieClip;/* * ロゴやスタートボタンなど、ゲーム中の星とは異なるが同様に * 掴む対象となるオブジェクトを生成する * 引数はマッピングされた名前と、スケール */	public class Catchable extends Sprite {		[Embed(source="../assets/images/logo.png")]		private var LogoImage:Class;		private var img:Bitmap;		private var catcher:MovieClip;				/*[Embed(source="../assets/images/manual_start.png")]		private var StartButtonImage:Class;*/						private var mapping:Object = {			"logo": LogoImage,			"startButton": StartButton,			"omb": OncemoreButton		}				public var vx:Number = 0;		public var vy:Number = 0;		public var acceleration:Number = 0;		public var point:Number = 0;		public var delete_flag:Boolean = false;		public var isCollided:Boolean = false;		public function Catchable(name:String, scale:Number = 0.5) {			if(name == "logo"){				img = new mapping[name]();				img.scaleX = img.scaleY = scale;				img.x = - img.width/2;				img.y = - img.height/2;				addChild(img);			} else if (name == "startButton" || name == "omb"){				catcher = new mapping[name]();				catcher.scaleX = catcher.scaleY = scale;				catcher.x = - catcher.width/2;				catcher.y = - catcher.height/2;				addChild(catcher);			}					}				public function destroy():void {			removeChildren();		}	}}