package objects {	import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFormat;	import flash.text.TextFormatAlign;	import flash.text.TextFieldType;	import flash.display.Loader;	import flash.net.URLRequest;	import flash.events.Event;	import flash.display.BitmapData;		public class EndField extends Sprite{		private var end_text:TextField;		private var tf:TextFormat;				private var loader:Loader;		public function EndField() {						end_text = new TextField();		    			tf = new TextFormat();			tf.color = 0xffffff;			tf.align = TextFormatAlign.CENTER;			tf.size = 42;			tf.font ="娃娃体-简 常规体";							end_text.type = TextFieldType.DYNAMIC;			end_text.defaultTextFormat = tf;			end_text.width = 300;			end_text.height = 65;			end_text.text = "Retry ?";			//end_text.background = true;			//end_text.backgroundColor = 0xdddddd;						addChild(end_text);						loader = new Loader();			loader.contentLoaderInfo.addEventListener(Event.COMPLETE, onComplete);			loader.load(new URLRequest("assets/images/arrow.gif"));		}				private function onComplete(e:Event):void {			var loader:Loader = e.currentTarget.loader;			var bmd:BitmapData = new BitmapData(loader.width, loader.height);			bmd.draw(loader);						var arrow01:Sprite = new Sprite();			arrow01.graphics.beginBitmapFill(bmd, null, false);			arrow01.graphics.drawRect(0, 0, loader.width, loader.height);			arrow01.graphics.endFill();			addChild(arrow01);			arrow01.x = 60;			arrow01.y = end_text.height;						var arrow02:Sprite = new Sprite();			arrow02.graphics.copyFrom(arrow01.graphics);			addChild(arrow02);			arrow02.x = end_text.width - 60;			arrow02.y = end_text.height;			arrow02.rotationY = 180;		}	}	}