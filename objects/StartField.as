package  objects{	import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFormat;	import flash.text.TextFormatAlign;	import flash.text.TextFieldType;	import flash.display.Loader;	import flash.net.URLRequest;	import flash.events.Event;	import flash.display.BitmapData;		public class StartField extends Sprite{		private var start_text:TextField;		private var tf:TextFormat;				private var loader:Loader;			public function StartField() {						start_text = new TextField();		    			tf = new TextFormat();			tf.color = 0xffffff;			tf.align = TextFormatAlign.CENTER;			tf.size = 42;			tf.font ="娃娃体-简 常规体";							start_text.type = TextFieldType.DYNAMIC;			start_text.defaultTextFormat = tf;			start_text.width = 300;			start_text.height = 65;			start_text.text = "Catch to start";			//start_text.background = true;			//start_text.backgroundColor = 0xdddddd;						addChild(start_text);						loader = new Loader();			loader.contentLoaderInfo.addEventListener(Event.COMPLETE, onComplete);			loader.load(new URLRequest("assets/images/arrow.gif"));					}				private function onComplete(e:Event):void {			var loader:Loader = e.currentTarget.loader;			var bmd:BitmapData = new BitmapData(loader.width, loader.height);			bmd.draw(loader);						var arrow01:Sprite = new Sprite();			arrow01.graphics.beginBitmapFill(bmd, null, false);			arrow01.graphics.drawRect(0, 0, loader.width, loader.height);			arrow01.graphics.endFill();			addChild(arrow01);			arrow01.x = 60;			arrow01.y = start_text.height;						var arrow02:Sprite = new Sprite();			arrow02.graphics.copyFrom(arrow01.graphics);			addChild(arrow02);			arrow02.x = start_text.width - 60;			arrow02.y = start_text.height;			arrow02.rotationY = 180;		}	}	}