package  objects {	import flash.display.Sprite;	import core.Mediator;	import a24.tween.Tween24;		public class BlackScreen extends Sprite {		public function BlackScreen() {			this.graphics.beginFill(0x000000);			this.graphics.drawRect(0, 0, Mediator.stageWidth, Mediator.stageHeight);		}				public function fadeDark(callback:Function = null):void {			Tween24.serial(				Tween24.tween(this, 0.1).alpha(0.1),				Tween24.tween(this, 0.6, Tween24.ease.QuadOut).alpha(1)			).onComplete(callback).play();		}				public function fadeLight(callback:Function = null):void {			Tween24.serial(				Tween24.tween(this, 0.1).alpha(0.9),				Tween24.tween(this, 0.5, Tween24.ease.QuadIn).alpha(0)			).onComplete(callback).play();		}				public function brightUp():void {			Tween24.serial(				Tween24.tween(this, 0.05).alpha(0.1),				Tween24.tween(this, 0.1, Tween24.ease.QuadOut).alpha(0.3),				Tween24.tween(this, 0.1, Tween24.ease.QuadOut).alpha(0)			).play();		}				public function changeWhite():void {			this.graphics.clear();			this.graphics.beginFill(0x66ffffff);			this.graphics.drawRect(0, 0, Mediator.stageWidth, Mediator.stageHeight);		}				public function changeBlack():void {			this.graphics.clear();			this.graphics.beginFill(0x000000);			this.graphics.drawRect(0, 0, Mediator.stageWidth, Mediator.stageHeight);		}	}	}