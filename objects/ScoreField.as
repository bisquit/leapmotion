package  objects{	import flash.text.TextField;	import flash.text.TextFieldType;	import flash.text.TextFormat;	import flash.text.TextFormatAlign;	import flash.display.Sprite;		public class ScoreField extends Sprite{				private var score:int;				private var score_text:TextField;		private var unit_text:TextField;				private var tf:TextFormat;				public function ScoreField() {			score = 0;						score_text = new TextField();		    unit_text = new TextField();						tf = new TextFormat();			tf.color = 0xffffff;			tf.align = TextFormatAlign.RIGHT;			tf.size = 34;			tf.font = "ヒラギノ丸ゴ Pro W4";				score_text.type = TextFieldType.DYNAMIC;			score_text.defaultTextFormat = tf;			score_text.width = 100;			score_text.text = score.toString();						tf.size = 22;			tf.font ="娃娃体-简 常规体";			unit_text.defaultTextFormat = tf;			unit_text.x = score_text.width;			unit_text.width = 60;			unit_text.text = "point";						addChild(score_text);			addChild(unit_text);		}				public function changeScore(point:int):void{			this.score += point;			score_text.text = score.toString();		}	}	}