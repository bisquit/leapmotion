package  objects{	import flash.text.TextField;	import flash.text.TextFieldType;	import flash.text.TextFormat;	import flash.text.TextFormatAlign;	import flash.display.Sprite;	import flash.events.Event;		public class ScoreField extends Sprite{				private var score:int;		private var display_text:int;				private var score_text:TextField;		private var unit_text:TextField;				private var tf:TextFormat;				private var isSloting:Boolean = false;				public function ScoreField() {			score = 0;			display_text = 0;						score_text = new TextField();		    unit_text = new TextField();						tf = new TextFormat();			tf.align = TextFormatAlign.RIGHT;			tf.size = 80;			tf.font = "shinagino";			score_text.type = TextFieldType.DYNAMIC;			score_text.defaultTextFormat = tf;			score_text.embedFonts = true;			score_text.width = 250;			score_text.height = 100;			score_text.textColor = 0xb4e2da;			score_text.text = display_text.toString();						unit_text.defaultTextFormat = tf;			unit_text.x = score_text.width;			unit_text.width = 60;			unit_text.text = "";						addChild(score_text);			addChild(unit_text);		}				public function changeScore(point:int):void{			this.score += point;			if( ! isSloting ){				addEventListener(Event.ENTER_FRAME, slotScore);				isSloting = true;			}		}				private function slotScore(e:Event):void {						if(this.score > this.display_text){				display_text += 1;			}else if(this.score < this.display_text){				display_text -= 1;			}else{				removeEventListener(Event.ENTER_FRAME, slotScore);				isSloting = false;			}						score_text.text = display_text.toString();					}	}	}