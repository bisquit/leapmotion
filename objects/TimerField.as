package objects{	import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFormat;	import flash.text.TextFormatAlign;	import flash.text.TextFieldType;	import flash.text.AntiAliasType;	import flash.utils.setTimeout;	import core.Mediator;	public class TimerField extends Sprite {		private var time:Number;		private var time_text:TextField; // 時間表示部分		private var unit_text:TextField; // 単位(sec)表示部分		private var tf:TextFormat;		public function TimerField() {			time = 0;			time_text = new TextField();			unit_text = new TextField();						/*time_text.background = true;			time_text.backgroundColor = 0xcccccc;			unit_text.background = true;			unit_text.backgroundColor = 0xccccff;*/			tf = new TextFormat();			tf.color = 0xffffff;			tf.align = TextFormatAlign.CENTER;			tf.size = 31;			tf.font = "ヒラギノ丸ゴ Pro W4";			time_text.type = TextFieldType.DYNAMIC;			time_text.defaultTextFormat = tf;			time_text.width = 100;			time_text.height = 34;			time_text.text = time.toFixed(2);			tf.size = 20;			unit_text.defaultTextFormat = tf;			unit_text.y = time_text.height;			unit_text.width = 100;			unit_text.height = 28;			unit_text.text = "sec";						addChild(unit_text);			addChild(time_text);		}				public function start(limit:Number = 30):void {			this.time = limit;			update();		}				private function update():void {			this.time -= 0.07;			if(this.time <= 0){				this.time = 0;				time_text.text = this.time.toFixed(2);				//Mediator.endGame();				return;			}			time_text.text = this.time.toFixed(2);						setTimeout(update, 70);		}	}}